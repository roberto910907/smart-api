{
    "name": "roberto910907/smart-api",
    "description": "Generate a Laravel API in minutes",
    "keywords": [
        "SmartyApi",
        "laravel",
        "smart-api"
    ],
    "homepage": "https://github.com/roberto910907/smart-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Roberto Rielo",
            "email": "roberto910907@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "SmartApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "SmartApi\\SmartApiServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
